{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./_esm",
        "noEmit": false,
        "jsx": "react",
        "declarationMap": false,
        "tsPlusConfig": "../../tsplus.config.json",
        "paths": {
            "@effect-ts-app/core/*": [
                "../core/_src/*"
            ],
            "@effect-ts-app/core": [
                "../core/_src"
            ],
            "@effect-ts-app/infra/*": [
                "../infra/_src/*"
            ],
            "@effect-ts-app/infra": [
                "../infra/_src"
            ],
            "@effect-ts-app/fluent/*": [
                "../fluent/_src/*"
            ],
            "@effect-ts-app/fluent": [
                "../fluent/_src"
            ],
            "@effect-ts-app/prelude/*": [
                "../prelude/*"
            ],
            "@effect-ts-app/prelude": [
                "../prelude"
            ]
        },
    },
    "include": [
        "./"
    ],
    "exclude": [
        "./_esm",
        "./_mjs",
        "./_cjs"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}