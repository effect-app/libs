{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "esnext",
            "DOM"
        ],
        "tsPlusConfig": "../../tsplus.config.json",
        //        "tsPlusGlobalFiles": [
        //            "./_src/_global.ts"
        //        ],
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": "./_src",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "types": [
            "./types/modules"
        ],
        // temp disbaled to support ts-plus ops
        "importsNotUsedAsValues": "preserve",
    },
    "include": [
        "./_src/**/*.ts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "references": [
        {
            "path": "../boilerplate-prelude"
        },
        {
            "path": "../infra"
        },
        {
            "path": "../schema"
        },
        {
            "path": "../core"
        },
    ]
}