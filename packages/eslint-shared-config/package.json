{
  "name": "@effect-app/eslint-shared-config",
  "version": "0.4.1",
  "description": "Shared flat ESLint base & vue configs for effect-app monorepo",
  "license": "MIT",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "watch": "pnpm build -w",
    "build": "echo 'Nothing to build (config only)'",
    "pub": "pnpm prepublish && npm publish --access public",
    "prepublish": "echo 'No build step for config package'",
    "postpublish": "echo 'Published @effect-app/eslint-shared-config'",
    "prepack": "patch-package || echo 'already patched'"
  },
  "exports": {
    "./eslint.base.config": {
      "default": "./src/eslint.base.config.mjs"
    },
    "./eslint.vue.config": {
      "default": "./src/eslint.vue.config.mjs"
    }
  },
  "dependencies": {
    "@effect-app/eslint-codegen-model": "workspace:*",
    "@eslint/js": "9.39.1",
    "@eslint/eslintrc": "3.3.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-codegen": "0.17.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-unused-imports": "4.3.0",
    "@ben_12/eslint-plugin-dprint": "1.12.0",
    "eslint-plugin-formatjs": "5.4.2",
    "@vue/eslint-config-typescript": "14.6.0",
    "typescript-eslint": "8.46.4",
    "eslint-plugin-vue": "10.5.1",
    "dprint-plugin-malva": "0.15.0",
    "dprint-plugin-markup": "0.24.1",
    "dprint-plugin-yaml": "0.5.1",
    "@dprint/typescript": "0.95.12",
    "@eslint/compat": "1.4.1",
    "eslint-import-resolver-webpack": "0.13.10",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-watch": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "@dprint/formatter": "0.4.1",
    "jsonc-parser": "3.3.1"
  },
  "bundledDependencies": [
    "@ben_12/eslint-plugin-dprint"
  ],
  "devDependencies": {
    "patch-package": "^8.0.1"
  },
  "peerDependencies": {
    "eslint": "^9.39.1",
    "typescript": "~5.9.3",
    "dprint": "^0.50.2"
  }
}
