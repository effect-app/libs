{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./_src",
    "outDir": "./_esm",
    "noEmit": false,
    "removeComments": true,
    // keep in here, cause madge can't detect it from extended tsconfig
    "moduleResolution": "node",
    "types": [
      "@effect-ts-app/prelude/_ext/index",
      "@effect-ts-app/fluent/types/node"
    ],
    "paths": {
      "@effect-ts-app/core/*": [
        "../core/_src/*"
      ],
      "@effect-ts-app/core": [
        "../core/_src"
      ],
      "@effect-ts-app/infra/*": [
        "../infra/_src/*"
      ],
      "@effect-ts-app/infra": [
        "../infra/_src"
      ],
      "@effect-ts-app/fluent/*": [
        "../fluent/_src/*"
      ],
      "@effect-ts-app/fluent": [
        "../fluent/_src"
      ],
      "@effect-ts-app/prelude/*": [
        "../prelude/*"
      ],
      "@effect-ts-app/prelude": [
        "../prelude"
      ]
    },
  },
  "include": [
    "./_src"
  ],
  "exclude": [
    "./dist",
    "node_modules",
    "build",
    "lib",
    "dist",
    "**/*.d.ts.map"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}