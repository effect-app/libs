{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "esnext",
            "DOM"
        ],
        "tsPlusConfig": "../../tsplus.config.json",
        "tsPlusTypes": [
            "../../vendor/effect-io-tsplus.json",
            "../../vendor/fp-ts-data-tsplus.json"
        ],
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": "./_src",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
    },
    "include": [
        "./_src/**/*.ts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}