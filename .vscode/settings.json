{
  "explorer.sortOrderLexicographicOptions": "upper",
  // would prefer on in frontend, so might want to use a specialised frontend config..
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.experimental.expandableHover": true,
  "js/ts.hover.maximumLength": 5000,
  "typescript.preferences.autoImportFileExcludePatterns": [
    "node_modules/@sentry/node",
    "node_modules/vitest/dist",
    "node_modules/@azure/cosmos",
    "node_modules/effect-app/Schema",
    "node_modules/lodash",
    "node_modules/@types/lodash"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.workingDirectories": [
    {
      "pattern": "apps/*"
    },
    {
      "pattern": "packages/*"
    }
  ],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": [
    "source.fixAll.eslint",
    "source.addMissingImports"
  ],
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ],
  "eslint.format.enable": true,
  "csv-preview.separator": ";",
  "cSpell.words": [
    "codegen",
    "composables",
    "pipeable",
    "tsplus"
  ],
  "files.watcherExclude": {
    "**/target": true
  }
}