    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "private": true,
    "packageManager": "yarn@3.2.4",
    "scripts": {
        "autofix": "ultra -r autofix",
        "build": "ultra -r build",
        "test": "ultra -r yarn test",
        "testsuite": "ultra -r yarn testsuite",
        "ncu": "ncu",
        "update": "ultra -r --root ncu -u --packageFile package.json -x @types/node",
        "up": "yarn update && yarn",
        "pub": "yarn lerna publish --no-private",
        "client": "cd packages/client && yarn client",
        "ets:rimraf": "cd $INIT_CWD && rimraf",
        "ets:tsc": "cd $INIT_CWD && tsc",
        "ets:eslint": "cd $INIT_CWD && eslint",
        "ets:prettier": "cd $INIT_CWD && prettier",
        "ets:concurrently": "cd $INIT_CWD && concurrently",
        "ets:build-utils": "cd $INIT_CWD && build-utils",
        "ets:ts-node": "cd $INIT_CWD && ts-node",
        "ets:babel": "cd $INIT_CWD && babel",
        "ets:madge": "cd $INIT_CWD && madge",
        "ets:jest": "cd $INIT_CWD && jest"
    },
    "resolutions": {
        "typescript": "https://cdn.jsdelivr.net/npm/@tsplus/installer@0.0.146/compiler/typescript.tgz"
    },
    "devDependencies": {
        "@babel/cli": "^7.18.9",
