{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "tsPlusConfig": "../../tsplus.config.json",
        //        "tsPlusGlobalFiles": [
        //            "./src/_global.ts"
        //        ],
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": "./src",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "types": [
            "vitest/globals",
            "./types/modules"
        ],
        // temp disbaled to support ts-plus ops
        "importsNotUsedAsValues": "preserve",
    },
    "include": [
        "./src/**/*.ts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "references": [
        {
            "path": "../prelude"
        },
        {
            "path": "../infra-adapters"
        },
        {
            "path": "../schema"
        },
        {
            "path": "../core"
        },
    ]
}