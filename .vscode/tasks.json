{
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm watch",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "group": "watch-build"
      },
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "fileLocation": [
            "relative",
            "${workspaceRoot}",
          ],
        }
      ]
    },
  ]
}