{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./_src",
    "outDir": "./_esm",
    "noEmit": false,
    "removeComments": true,
    // keep in here, cause madge can't detect it from extended tsconfig
    "moduleResolution": "node",
    "types": [
      "@effect-ts-app/prelude/_ext/index",
      "@effect-ts-app/fluent/types/node"
    ],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "node_modules",
    "build",
    "lib",
    "dist",
    "**/*.d.ts.map"
  ]
}