{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./_esm",
        "noEmit": false,
        "baseUrl": "./",
        "jsx": "react",
        "declarationMap": false,
        "tsPlusConfig": "../../tsplus.config.json",
        "paths": {
            "@effect-ts-app/core/*": [
                "../core/_src/*"
            ],
            "@effect-ts-app/core": [
                "../core/_src"
            ],
            "@effect-ts-app/infra/*": [
                "../infra/_src/*"
            ],
            "@effect-ts-app/infra": [
                "../infra/_src"
            ],
            "@effect-ts-app/schema/*": [
                "../schema/_src/*"
            ],
            "@effect-ts-app/schema": [
                "../schema/_src"
            ],
            "@effect-ts-app/prelude/*": [
                "./*"
            ],
            "@effect-ts-app/prelude": [
                "."
            ]
        },
    },
    "include": [
        "./"
    ],
    "exclude": [
        "./_esm"
    ],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../schema"
        }
    ]
}