{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "noEmit": false,
        "rootDir": "./src",
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./dist",
        "node_modules",
        "build",
        "lib",
        "dist",
        "**/*.d.ts.map"
    ],
    "references": [
        {
            "path": "../prelude"
        }
    ]
}