{
  "name": "@effect-app/eslint-shared-config",
  "version": "0.0.6",
  "description": "Shared flat ESLint base & vue configs for effect-app monorepo",
  "license": "MIT",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "watch": "pnpm build -w",
    "build": "echo 'Nothing to build (config only)'",
    "pub": "pnpm prepublish && npm publish --access public",
    "prepublish": "echo 'No build step for config package'",
    "postpublish": "echo 'Published @effect-app/eslint-shared-config'",
    "prepack": "pnpm install --ignore-scripts --no-frozen-lockfile && patch-package || echo 'patch already applied'"
  },
  "exports": {
    "./eslint.base.config": {
      "default": "./src/eslint.base.config.mjs"
    },
    "./eslint.vue.config": {
      "default": "./src/eslint.vue.config.mjs"
    }
  },
  "dependencies": {
    "@effect-app/eslint-codegen-model": "workspace:*",
    "@eslint/js": "9.35.0",
    "@eslint/eslintrc": "^3.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-codegen": "^0.17.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "@ben_12/eslint-plugin-dprint": "1.7.5",
    "eslint-plugin-formatjs": "^5.4.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "typescript-eslint": "8.43.0",
    "eslint-plugin-vue": "^10.4.0",
    "dprint-plugin-malva": "^0.14.3",
    "dprint-plugin-markup": "^0.23.3",
    "dprint-plugin-yaml": "^0.5.1",
    "@dprint/typescript": "^0.95.11",
    "@eslint/compat": "1.3.2",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-prettier-vue": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-watch": "^8.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0"
  },
  "bundledDependencies": [
    "@ben_12/eslint-plugin-dprint"
  ],
  "devDependencies": {
    "patch-package": "^8.0.0"
  },
  "peerDependencies": {
    "eslint": "^9.35.0",
    "typescript": "~5.9.2",
    "dprint": "^0.50.1"
  }
}
