{
    "extends": "../../tsconfig.lib.json",
    "compilerOptions": {
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "baseUrl": "./",
        "rootDir": "./src",
        "noEmit": false,
        "tsPlusConfig": "../../tsplus.config.json",
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./dist",
        "node_modules",
        "build",
        "lib",
        "dist",
        "**/*.d.ts.map"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}