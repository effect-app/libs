{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "tsPlusConfig": "../../tsplus.config.json",
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": "./src",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "tsPlusEnabled": false
    },
    "include": [
        "./src/**/*.ts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "references": [
        {
            "path": "../prelude"
        },
        {
            "path": "../schema"
        },
        {
            "path": "../core"
        },
    ]
}