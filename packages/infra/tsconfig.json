{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "./_esm",
        "noEmit": false,
        "rootDir": "./_src",
        "tsPlusConfig": "../../tsplus.config.json",
        "types": [
            "@effect-ts-app/core/_src/_ext/index",
            "@effect-ts-app/core/fluent/_ext/awesome/node"
        ],
        "paths": {
            "@effect-ts-app/core/*": [
                "../core/_src/*"
            ],
            "@effect-ts-app/core": [
                "../core/_src"
            ],
            "@effect-ts-app/infra/*": [
                "./_src/*"
            ],
            "@effect-ts-app/infra": [
                "./_src"
            ]
        },
        "plugins": [
            // // Transform paths in output .js files
            // {
            //     "transform": "ts-transform-paths"
            // },
            // // Transform paths in output .d.ts files (Include this line if you output declarations files)
            // {
            //     "transform": "ts-transform-paths",
            //     "afterDeclarations": true
            // },
            {
                "transform": "@effect-ts/tracing-plugin"
            }
        ]
    },
    "include": [
        "./_src"
    ],
    "exclude": [
        "./dist",
        "node_modules",
        "build",
        "lib",
        "dist",
        "**/*.d.ts.map"
    ],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../schema"
        }
    ]
}