        "@effect/core": "^0.0.15",
        "@tsplus/stdlib": "^0.2.8",
        "@types/jest": "^28.1.6",
        "@types/lodash-es": "^4.17.6",
        "@types/node": "^16.9.1",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.30.7",
